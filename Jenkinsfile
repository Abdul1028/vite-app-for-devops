pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'echo "Compile your code here"'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'echo "Run tests here"'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                sh 'echo "Deploy app here"'
            }
        }
    }
}
